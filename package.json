{
  "name": "mcp-gateway",
  "version": "1.0.0",
  "private": true,
  "description": "Security gateway for Model Context Protocol servers - authentication, session management, and authorization",
  "type": "module",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:coverage": "turbo test:coverage",
    "lint": "eslint .",
    "clean": "turbo clean && rm -rf node_modules .turbo"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "eslint": "^9.39.1",
    "prettier": "^3.7.4",
    "turbo": "^2.6.1",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.14.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/thomkav/mcp-gateway.git"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "security",
    "authentication",
    "authorization",
    "gateway",
    "session-management"
  ],
  "author": "Thomas Kavanagh",
  "license": "MIT"
}
